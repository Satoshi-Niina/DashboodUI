# 実行環境
NODE_ENV=production

# データベース接続情報 (GCP PostgreSQL)
DATABASE_URL=postgresql://postgresql:Takabeni@localhost:5432/webappdb

# サーバーポート
PORT=3000

# JWT秘密鍵 (強力なランダム文字列を設定してください)
JWT_SECRET=deployment_secret_key_placeholder

# CORS許可オリジン (一般公開の場合は * または特定のドメインをカンマ区切りで指定)
# 例: https://yourdomain.com,https://emergency.example.com
CORS_ORIGIN=*

# 各アプリケーションのURL設定 (本番環境のエンドポイント)
APP_URL_EMERGENCY=https://emergency.example.com
APP_URL_PLANNING=https://planning.example.com
APP_URL_EQUIPMENT=https://equipment.example.com
APP_URL_FAILURE=https://failure.example.com
