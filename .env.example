# ========================================
# 統一データベース環境変数設定
# ローカル・本番環境切り替え用
# ========================================

# 環境設定
NODE_ENV=development  # production に変更で本番モード

# ========================================
# ローカル環境設定（開発用）
# ========================================

# データベース接続（ローカルPostgreSQL）
DATABASE_URL=postgresql://postgres:Takabeni@localhost:55432/webappdb

# データベース接続情報（個別指定）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=webappdb
DB_USER=postgres
DB_PASSWORD=Takabeni

# ========================================
# 本番環境設定（Cloud SQL / Google Cloud）
# ========================================
# 本番環境では以下をコメント解除して使用

# Cloud SQL接続名（Google Cloud Platform）
# CLOUD_SQL_INSTANCE=your-project:region:instance-name

# 本番データベース接続情報
# DATABASE_URL=postgresql://username:password@/webappdb?host=/cloudsql/your-project:region:instance-name
# DB_HOST=/cloudsql/your-project:region:instance-name
# DB_PORT=5432
# DB_NAME=webappdb
# DB_USER=your-db-user
# DB_PASSWORD=your-secure-password

# ========================================
# セキュリティ設定
# ========================================

# JWT Secret（本番では必ず変更すること！）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# セッション秘密鍵
SESSION_SECRET=your-session-secret-key-change-this

# ========================================
# CORS設定
# ========================================

# 許可するオリジン（カンマ区切りで複数指定可能）
# 開発環境: * （すべて許可）
# 本番環境: 特定のドメインのみ指定
CORS_ORIGIN=*

# 本番環境の例
# CORS_ORIGIN=https://yourdomain.com,https://api.yourdomain.com

# ========================================
# アプリケーションURL設定
# ========================================

# ダッシュボードUI
DASHBOARD_URL=http://localhost:3000

# 各サブシステムのURL（ローカル環境）
APP_URL_EMERGENCY=http://localhost:3001
APP_URL_PLANNING=http://localhost:3002
APP_URL_EQUIPMENT=http://localhost:3003
APP_URL_FAILURE=http://localhost:3004

# 本番環境のURL例
# APP_URL_EMERGENCY=https://emergency.yourdomain.com
# APP_URL_PLANNING=https://planning.yourdomain.com
# APP_URL_EQUIPMENT=https://equipment.yourdomain.com
# APP_URL_FAILURE=https://failure.yourdomain.com

# ========================================
# サーバー設定
# ========================================

# ポート番号
PORT=3000

# ログレベル（development, production）
LOG_LEVEL=development

# ========================================
# その他の設定
# ========================================

# タイムゾーン
TZ=Asia/Tokyo

# バックアップディレクトリ
BACKUP_DIR=./backups

# ファイルアップロード制限（MB）
MAX_FILE_SIZE=10
